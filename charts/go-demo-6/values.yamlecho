
canary:
  enable: true
  service:
    hosts:
    - go-demo-6.34.73.219.73.nip.io
    gateways:
    - jx-gateway.istio-system.svc.cluster.local
  canaryAnalysis:
    interval: 10s
    threshold: 5
    maxWeight: 50
    stepWeight: 10
    metrics:
    - name: istio_requests_total
      threshold: 99
      interval: 60s
    - name: istio_request_duration_seconds_bucket
      threshold: 500
      interval: 60s

